{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Build N Body Gravity Simulation",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/build/debug && cmake -S ${workspaceFolder}/src/gravity_sim -B ${workspaceFolder}/build/debug -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_COMPILER=g++ && cmake --build /root/projects/N_Body_Problem/build/debug -j16"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Create build/debug and compile n_body_gravity_inelastic debug binary"
        },
        {
            "label": "Build & Run N Body Gravity Simulation",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/build/release && cmake -S ${workspaceFolder}/src/gravity_sim -B ${workspaceFolder}/build/release -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=g++ && cmake --build /root/projects/N_Body_Problem/build/release -j16 && ${workspaceFolder}/build/release/n_body_gravity_inelastic"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Create build/release and compile n_body_gravity_inelastic release binary"
        },
                {
            "label": "GPU Build & Run N Body Gravity Simulation",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/build/release && cmake -S ${workspaceFolder}/src/gravity_sim_gpu -B ${workspaceFolder}/build/release -DCMAKE_BUILD_TYPE=Release -DCMAKE_CUDA_COMPILER=/usr/local/cuda-12.6/bin/nvcc && cmake --build /root/projects/N_Body_Problem/build/release -j16 && ${workspaceFolder}/build/release/gpu_n_body_gravity_inelastic"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Create build/release and compile n_body_gravity_inelastic release binary"
        },
        {
            "label": "Build & Run N Body Electro Elastic Simulation",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/build/release && cmake -S ${workspaceFolder}/src/electro_static_sim -B ${workspaceFolder}/build/release -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=g++ && cmake --build /root/projects/N_Body_Problem/build/release -j16 && ${workspaceFolder}/build/release/n_body_electro_elastic"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Create build/release and compile n_body_electro_elastic release binary"
        },
        {
            "label": "Build & Run N Body Collision Simulation ",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/build/release && cmake -S ${workspaceFolder}/src/hard_sphere_molecular_dyn -B ${workspaceFolder}/build/release -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=g++ && cmake --build /root/projects/N_Body_Problem/build/release -j16 && ${workspaceFolder}/build/release/n_body_collision"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Create build/release and compile n_body_collision release binary"
        },
        {
            "label": "Remove build folder",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "rm -rf ${workspaceFolder}/build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false
            },
            "detail": "Remove build folder and all its contents"
        }
    ]
